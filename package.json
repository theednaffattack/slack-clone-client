{
  "name": "slack-clone-client",
  "version": "1.0.0",
  "scripts": {
    "dev": "next -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint-and-fix": "eslint . --ext .ts,.tsx --fix",
    "gen": "graphql-codegen -r dotenv/config --config codegen.yml && prettier --write './src/generated/graphql.tsx'",
    "release": "standard-version",
    "commit": "git-cz"
  },
  "engines": {
    "node": "12.16.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@apollo/link-context": "^2.0.0-beta.3",
    "@chakra-ui/core": "^1.0.0-rc.3",
    "@chakra-ui/icons": "^1.0.0-rc.3",
    "@chakra-ui/react": "^1.0.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "@urql/exchange-graphcache": "^3.1.5",
    "apollo-link": "^1.2.14",
    "apollo-link-context": "^1.0.20",
    "apollo-link-http": "^1.5.17",
    "cookie": "^0.4.1",
    "formik": "^2.2.0",
    "framer-motion": "^2.9.4",
    "graphql": "^15.3.0",
    "next": "latest",
    "next-urql": "^2.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-is": "^16.13.1",
    "react-lottie": "^1.2.3",
    "subscriptions-transport-ws": "^0.9.18",
    "urql": "^1.10.1",
    "wonka": "^4.0.14"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.10",
    "@graphql-codegen/typescript": "1.17.10",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^2.0.7",
    "@graphql-codegen/typescript-urql": "^2.0.2",
    "@types/cookie": "^0.4.0",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-lottie": "^1.2.5",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "typescript": "4.0.2"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "amd": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
